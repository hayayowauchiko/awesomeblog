<%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
	#(current_user.active_relationships.find_by(followed_id: @user.id)は Relationship内のfollowed_idが@user.idであるRelationshipのIDカラム番号をdestroyに渡している
	#user delete resourceに行かないのはオブジェクトがrelationshipだからrailsが自動的に理解している
             method: :delete ) do |f| %>
  <%= f.submit "Unfollow", class: "btn btn-primary" %>
<% end %>
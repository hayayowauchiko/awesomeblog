<%= provide(:title, @user.name) %>

<div class=“row”>
	<aside class="col-md-4">
	<%= gravatar_for(@user)  %>
	<%= @user.name %>

	<section class="stats">
    <%= render 'shared/stats' %>
	</section>

	</aside>
	<div class="col-md-8">
	 <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>

		<ol class="microposts">
			<%= render @microposts %>
				<!-- rendermicropostsフォルダのmircropostパーシャルをパーシャルを呼び出している -->
		</ol>
		<%= will_paginate @microposts %>
		<!-- paginateに@micropostsを送っている -->
	<% end %>
	</div>

</div>
